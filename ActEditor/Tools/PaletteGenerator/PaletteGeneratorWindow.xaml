<Styles:TkWindow x:Class="ActEditor.Tools.PaletteGenerator.PaletteGeneratorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" SnapsToDevicePixels="True"
              xmlns:Styles="clr-namespace:TokeiLibrary.WPF.Styles;assembly=TokeiLibrary"
                 xmlns:TokeiLibrary="clr-namespace:TokeiLibrary;assembly=TokeiLibrary"
                 mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:genericControls="clr-namespace:ActEditor.Core.WPF.GenericControls"
                 xmlns:PaletteGen="clr-namespace:ActEditor.Tools.PaletteGenerator"
                 Background="{StaticResource TabItemBackground}" Foreground="{StaticResource TextForeground}"
                 Height="700" Width="1100" MinWidth="1000" MinHeight="600" Title="Palette Generator">
    <Grid Focusable="True" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="300" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="*" MinWidth="300" />
        </Grid.ColumnDefinitions>
        
        <!-- ACT Info -->
        <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,0,10">
            <Label Content="Source ACT:" Padding="0" Margin="0,0,10,0" VerticalAlignment="Center" />
            <TextBlock Name="_tbActInfo" Grid.Column="1" VerticalAlignment="Center" Foreground="{StaticResource TextForeground}" FontStyle="Italic" />
        </Grid>

        <!-- Palette Index Selection -->
        <Grid Grid.Row="1" Grid.Column="0" Margin="0,0,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Label Content="Palette Indices to Modify (0-255):" Padding="0" Margin="0,0,0,5" />
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0" HorizontalAlignment="Left">
                    <Border BorderBrush="{StaticResource UIThemeMainTabControlBorderBrush}" BorderThickness="1" Background="{StaticResource TabItemBackground}" Padding="5">
                        <PaletteGen:PaletteSelectorGenerator x:Name="_paletteSelector" IsMultipleColorsSelectable="True" Width="256" Height="256" />
                    </Border>
                </Grid>
                <StackPanel Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Center">
                    <Button Name="_btnSelectAll" Content="Select All" Click="_btnSelectAll_Click" Margin="0,0,0,5" Padding="5,2" />
                    <Button Name="_btnSelectNone" Content="Select None" Click="_btnSelectNone_Click" Padding="5,2" />
                </StackPanel>
            </Grid>
            <Grid Grid.Row="2" Margin="0,5,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Label Content="Selected:" Padding="0" Margin="0,0,10,0" VerticalAlignment="Center" />
                <TextBlock Name="_tbSelectedIndices" Grid.Column="1" Padding="0" Foreground="{StaticResource TextForeground}" FontStyle="Italic" TextWrapping="Wrap" VerticalAlignment="Center" />
            </Grid>
        </Grid>

        <!-- Mode Selection and Parameters -->
        <Grid Grid.Row="1" Grid.Column="2" Margin="0,0,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            
            <!-- Mode Selection -->
            <Grid Grid.Row="0" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Label Content="Mode:" Padding="0" Margin="0,0,10,0" VerticalAlignment="Center" />
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <RadioButton Name="_rbModeHsv" Content="HSV Standard" IsChecked="True" Margin="0,0,20,0" VerticalAlignment="Center" Checked="_rbMode_Checked" />
                    <RadioButton Name="_rbModeColorize" Content="Colorize" Margin="0,0,20,0" VerticalAlignment="Center" Checked="_rbMode_Checked" />
                    <RadioButton Name="_rbModeGrayscale" Content="Grayscale" VerticalAlignment="Center" Checked="_rbMode_Checked" />
                </StackPanel>
            </Grid>

            <!-- HSV Standard Mode Controls -->
            <GroupBox Grid.Row="1" Header="HSV Standard Mode Parameters" Name="_gbHsvMode" Visibility="Visible">
                <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <!-- Hue -->
                <Label Content="Hue:" Grid.Row="0" Grid.Column="0" Padding="0" Margin="0,0,10,5" VerticalAlignment="Center" />
                <Label Content="Min:" Grid.Row="0" Grid.Column="1" Padding="0" Margin="0,0,5,5" VerticalAlignment="Center" />
                <Border Grid.Row="0" Grid.Column="2" BorderBrush="{StaticResource UIThemeMainTabControlBorderBrush}" BorderThickness="1" Margin="0,0,5,5">
                    <genericControls:ClickSelectTextBox x:Name="_tbHueMin" TextAlignment="Right" BorderThickness="0" Padding="3,2" />
                </Border>
                <Label Content="Max:" Grid.Row="0" Grid.Column="3" Padding="0" Margin="0,0,5,5" VerticalAlignment="Center" />
                <Border Grid.Row="0" Grid.Column="4" BorderBrush="{StaticResource UIThemeMainTabControlBorderBrush}" BorderThickness="1" Margin="0,0,0,5">
                    <genericControls:ClickSelectTextBox x:Name="_tbHueMax" TextAlignment="Right" BorderThickness="0" Padding="3,2" />
                </Border>
                <Label Content="Step:" Grid.Row="1" Grid.Column="1" Padding="0" Margin="0,0,5,5" VerticalAlignment="Center" />
                <Border Grid.Row="1" Grid.Column="2" BorderBrush="{StaticResource UIThemeMainTabControlBorderBrush}" BorderThickness="1" Margin="0,0,5,5">
                    <genericControls:ClickSelectTextBox x:Name="_tbHueStep" TextAlignment="Right" BorderThickness="0" Padding="3,2" />
                </Border>
                <Label Content="Range:" Grid.Row="1" Grid.Column="3" Padding="0" Margin="0,0,5,5" VerticalAlignment="Center" />
                <Border Grid.Row="1" Grid.Column="4" BorderBrush="{StaticResource UIThemeMainTabControlBorderBrush}" BorderThickness="1" Margin="0,0,0,5">
                    <genericControls:ClickSelectTextBox x:Name="_tbHueRange" TextAlignment="Right" BorderThickness="0" Padding="3,2" />
                </Border>

                <!-- Saturation -->
                <Label Content="Saturation:" Grid.Row="2" Grid.Column="0" Padding="0" Margin="0,0,10,0" VerticalAlignment="Center" />
                <Label Content="Min:" Grid.Row="2" Grid.Column="1" Padding="0" Margin="0,0,5,0" VerticalAlignment="Center" />
                <Border Grid.Row="2" Grid.Column="2" BorderBrush="{StaticResource UIThemeMainTabControlBorderBrush}" BorderThickness="1" Margin="0,0,5,0">
                    <genericControls:ClickSelectTextBox x:Name="_tbSaturationMin" TextAlignment="Right" BorderThickness="0" Padding="3,2" />
                </Border>
                <Label Content="Max:" Grid.Row="2" Grid.Column="3" Padding="0" Margin="0,5,5,0" VerticalAlignment="Center" />
                <Border Grid.Row="2" Grid.Column="4" BorderBrush="{StaticResource UIThemeMainTabControlBorderBrush}" BorderThickness="1" Margin="0,0,0,0">
                    <genericControls:ClickSelectTextBox x:Name="_tbSaturationMax" TextAlignment="Right" BorderThickness="0" Padding="3,2" />
                </Border>
                <Label Content="Step:" Grid.Row="3" Grid.Column="1" Padding="0" Margin="0,0,5,0" VerticalAlignment="Center" />
                <Border Grid.Row="3" Grid.Column="2" BorderBrush="{StaticResource UIThemeMainTabControlBorderBrush}" BorderThickness="1" Margin="0,0,5,0">
                    <genericControls:ClickSelectTextBox x:Name="_tbSaturationStep" TextAlignment="Right" BorderThickness="0" Padding="3,2" />
                </Border>

                <!-- Lightness -->
                <Label Content="Lightness:" Grid.Row="4" Grid.Column="0" Padding="0" Margin="0,5,10,0" VerticalAlignment="Center" />
                <Label Content="Min:" Grid.Row="4" Grid.Column="1" Padding="0" Margin="0,5,5,0" VerticalAlignment="Center" />
                <Border Grid.Row="4" Grid.Column="2" BorderBrush="{StaticResource UIThemeMainTabControlBorderBrush}" BorderThickness="1" Margin="0,5,5,0">
                    <genericControls:ClickSelectTextBox x:Name="_tbLightnessMin" TextAlignment="Right" BorderThickness="0" Padding="3,2" />
                </Border>
                <Label Content="Max:" Grid.Row="4" Grid.Column="3" Padding="0" Margin="0,5,5,0" VerticalAlignment="Center" />
                <Border Grid.Row="4" Grid.Column="4" BorderBrush="{StaticResource UIThemeMainTabControlBorderBrush}" BorderThickness="1" Margin="0,5,0,0">
                    <genericControls:ClickSelectTextBox x:Name="_tbLightnessMax" TextAlignment="Right" BorderThickness="0" Padding="3,2" />
                </Border>
                <Label Content="Step:" Grid.Row="5" Grid.Column="1" Padding="0" Margin="0,0,5,0" VerticalAlignment="Center" />
                <Border Grid.Row="5" Grid.Column="2" BorderBrush="{StaticResource UIThemeMainTabControlBorderBrush}" BorderThickness="1" Margin="0,0,5,0">
                    <genericControls:ClickSelectTextBox x:Name="_tbLightnessStep" TextAlignment="Right" BorderThickness="0" Padding="3,2" />
                </Border>
                </Grid>
            </GroupBox>

            <!-- Colorize Mode Controls -->
            <GroupBox Grid.Row="1" Header="Colorize Mode Parameters" Name="_gbColorizeMode" Visibility="Collapsed">
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <!-- Hue Range for Variations -->
                    <Label Content="Hue Range (for Variations):" Grid.Row="0" Grid.Column="0" Padding="0" Margin="0,0,10,5" VerticalAlignment="Center" />
                    <Label Content="Min:" Grid.Row="0" Grid.Column="1" Padding="0" Margin="0,0,5,5" VerticalAlignment="Center" />
                    <Border Grid.Row="0" Grid.Column="2" BorderBrush="{StaticResource UIThemeMainTabControlBorderBrush}" BorderThickness="1" Margin="0,0,5,5">
                        <genericControls:ClickSelectTextBox x:Name="_tbColorizeHueMin" TextAlignment="Right" BorderThickness="0" Padding="3,2" />
                    </Border>
                    <Label Content="Max:" Grid.Row="0" Grid.Column="3" Padding="0" Margin="0,0,5,5" VerticalAlignment="Center" />
                    <Border Grid.Row="0" Grid.Column="4" BorderBrush="{StaticResource UIThemeMainTabControlBorderBrush}" BorderThickness="1" Margin="0,0,0,5">
                        <genericControls:ClickSelectTextBox x:Name="_tbColorizeHueMax" TextAlignment="Right" BorderThickness="0" Padding="3,2" />
                    </Border>
                    <Label Content="Range:" Grid.Row="1" Grid.Column="1" Padding="0" Margin="0,0,5,5" VerticalAlignment="Center" />
                    <Border Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="3" BorderBrush="{StaticResource UIThemeMainTabControlBorderBrush}" BorderThickness="1" Margin="0,0,0,5">
                        <genericControls:ClickSelectTextBox x:Name="_tbColorizeHueRange" TextAlignment="Right" BorderThickness="0" Padding="3,2" />
                    </Border>

                    <!-- Colorize Hue Offsets -->
                    <Label Content="Hue Offset (Light tones):" Grid.Row="2" Grid.Column="0" Padding="0" Margin="0,5,10,5" VerticalAlignment="Center" />
                    <Border Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="4" BorderBrush="{StaticResource UIThemeMainTabControlBorderBrush}" BorderThickness="1" Margin="0,5,0,5">
                        <genericControls:ClickSelectTextBox x:Name="_tbColorizeHueLight" TextAlignment="Right" BorderThickness="0" Padding="3,2" />
                    </Border>

                    <Label Content="Hue Offset (Medium tones):" Grid.Row="3" Grid.Column="0" Padding="0" Margin="0,0,10,5" VerticalAlignment="Center" />
                    <Border Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="4" BorderBrush="{StaticResource UIThemeMainTabControlBorderBrush}" BorderThickness="1" Margin="0,0,0,5">
                        <genericControls:ClickSelectTextBox x:Name="_tbColorizeHueMedium" TextAlignment="Right" BorderThickness="0" Padding="3,2" />
                    </Border>

                    <Label Content="Hue Offset (Dark tones):" Grid.Row="4" Grid.Column="0" Padding="0" Margin="0,0,10,5" VerticalAlignment="Center" />
                    <Border Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="4" BorderBrush="{StaticResource UIThemeMainTabControlBorderBrush}" BorderThickness="1" Margin="0,0,0,5">
                        <genericControls:ClickSelectTextBox x:Name="_tbColorizeHueDark" TextAlignment="Right" BorderThickness="0" Padding="3,2" />
                    </Border>

                    <Label Content="Global Saturation Offset:" Grid.Row="5" Grid.Column="0" Padding="0" Margin="0,0,10,5" VerticalAlignment="Center" />
                    <Border Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="4" BorderBrush="{StaticResource UIThemeMainTabControlBorderBrush}" BorderThickness="1" Margin="0,0,0,5">
                        <genericControls:ClickSelectTextBox x:Name="_tbColorizeSaturation" TextAlignment="Right" BorderThickness="0" Padding="3,2" />
                    </Border>

                    <Label Content="Global Brightness Offset:" Grid.Row="6" Grid.Column="0" Padding="0" Margin="0,0,10,0" VerticalAlignment="Center" />
                    <Border Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="4" BorderBrush="{StaticResource UIThemeMainTabControlBorderBrush}" BorderThickness="1">
                        <genericControls:ClickSelectTextBox x:Name="_tbColorizeBrightness" TextAlignment="Right" BorderThickness="0" Padding="3,2" />
                    </Border>
                </Grid>
            </GroupBox>

            <!-- Grayscale Mode Controls -->
            <GroupBox Grid.Row="1" Header="Grayscale Mode Parameters" Name="_gbGrayscaleMode" Visibility="Collapsed">
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <!-- Grayscale Type -->
                    <Label Content="Grayscale Type:" Grid.Row="0" Grid.Column="0" Padding="0" Margin="0,0,10,10" VerticalAlignment="Center" />
                    <StackPanel Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="4" Orientation="Horizontal" Margin="0,0,0,10">
                        <RadioButton Name="_rbGrayscaleTypeBlackWhite" Content="Black/White" IsChecked="True" Margin="0,0,20,0" VerticalAlignment="Center" />
                        <RadioButton Name="_rbGrayscaleTypeGray" Content="Gray" Margin="0,0,20,0" VerticalAlignment="Center" />
                        <RadioButton Name="_rbGrayscaleTypeBoth" Content="Both" VerticalAlignment="Center" />
                    </StackPanel>

                    <!-- Light Tone -->
                    <Label Content="Light Tone:" Grid.Row="1" Grid.Column="0" Padding="0" Margin="0,0,10,5" VerticalAlignment="Center" />
                    <Border Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="4" BorderBrush="{StaticResource UIThemeMainTabControlBorderBrush}" BorderThickness="1" Margin="0,0,0,5">
                        <genericControls:ClickSelectTextBox x:Name="_tbGrayscaleLightTone" TextAlignment="Right" BorderThickness="0" Padding="3,2" />
                    </Border>

                    <!-- Medium Tone -->
                    <Label Content="Medium Tone:" Grid.Row="2" Grid.Column="0" Padding="0" Margin="0,0,10,5" VerticalAlignment="Center" />
                    <Border Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="4" BorderBrush="{StaticResource UIThemeMainTabControlBorderBrush}" BorderThickness="1" Margin="0,0,0,5">
                        <genericControls:ClickSelectTextBox x:Name="_tbGrayscaleMediumTone" TextAlignment="Right" BorderThickness="0" Padding="3,2" />
                    </Border>

                    <!-- Dark Tone -->
                    <Label Content="Dark Tone:" Grid.Row="3" Grid.Column="0" Padding="0" Margin="0,0,10,5" VerticalAlignment="Center" />
                    <Border Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="4" BorderBrush="{StaticResource UIThemeMainTabControlBorderBrush}" BorderThickness="1" Margin="0,0,0,5">
                        <genericControls:ClickSelectTextBox x:Name="_tbGrayscaleDarkTone" TextAlignment="Right" BorderThickness="0" Padding="3,2" />
                    </Border>

                    <!-- Contrast -->
                    <Label Content="Contrast:" Grid.Row="4" Grid.Column="0" Padding="0" Margin="0,0,10,5" VerticalAlignment="Center" />
                    <Border Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="4" BorderBrush="{StaticResource UIThemeMainTabControlBorderBrush}" BorderThickness="1" Margin="0,0,0,5">
                        <genericControls:ClickSelectTextBox x:Name="_tbGrayscaleContrast" TextAlignment="Right" BorderThickness="0" Padding="3,2" />
                    </Border>

                    <!-- Brightness -->
                    <Label Content="Brightness:" Grid.Row="5" Grid.Column="0" Padding="0" Margin="0,0,10,0" VerticalAlignment="Center" />
                    <Border Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="4" BorderBrush="{StaticResource UIThemeMainTabControlBorderBrush}" BorderThickness="1">
                        <genericControls:ClickSelectTextBox x:Name="_tbGrayscaleBrightness" TextAlignment="Right" BorderThickness="0" Padding="3,2" />
                    </Border>
                </Grid>
            </GroupBox>
        </Grid>

        <!-- Output Settings and Preview -->
        <Grid Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
            <!-- Output Settings -->
            <GroupBox Grid.Column="0" Header="Output Settings">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Label Content="Output Folder:" Grid.Row="0" Grid.Column="0" Padding="0" Margin="0,0,10,10" VerticalAlignment="Center" />
                <Styles:PathBrowser Grid.Row="0" Grid.Column="1" x:Name="_pbOutputFolder" BrowseMode="Folder" MinWidth="300" UseSavePath="True" SavePathUniqueName="PaletteGenerator - Output - " />

                <Label Content="Class:" Grid.Row="1" Grid.Column="0" Padding="0" Margin="0,0,10,10" VerticalAlignment="Center" />
                <ComboBox Grid.Row="1" Grid.Column="1" x:Name="_cbClass" MinWidth="300" Margin="0,0,0,10" DisplayMemberPath="DisplayName" SelectedValuePath="Code" />

                <Label Content="Gender:" Grid.Row="2" Grid.Column="0" Padding="0" Margin="0,0,10,10" VerticalAlignment="Center" />
                <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,10">
                    <RadioButton Name="_rbGenderMale" Content="Male (³²)" IsChecked="True" Margin="0,0,20,0" VerticalAlignment="Center" />
                    <RadioButton Name="_rbGenderFemale" Content="Female (¿©)" VerticalAlignment="Center" />
                </StackPanel>

                <Label Content="Sprite Type:" Grid.Row="3" Grid.Column="0" Padding="0" Margin="0,0,10,10" VerticalAlignment="Center" />
                <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,10">
                    <RadioButton Name="_rbSpriteTypeDefault" Content="Default" IsChecked="True" Margin="0,0,20,0" VerticalAlignment="Center" Checked="_rbSpriteType_Checked" />
                    <RadioButton Name="_rbSpriteTypeCostume" Content="Costume" VerticalAlignment="Center" Checked="_rbSpriteType_Checked" />
                </StackPanel>

                <Label Content="Costume Number:" Grid.Row="4" Grid.Column="0" Padding="0" Margin="0,0,10,10" VerticalAlignment="Center" />
                <Border Grid.Row="4" Grid.Column="1" BorderBrush="{StaticResource UIThemeMainTabControlBorderBrush}" BorderThickness="1" Margin="0,0,0,10">
                    <genericControls:ClickSelectTextBox x:Name="_tbCostumeNumber" TextAlignment="Right" BorderThickness="0" Padding="3,2" IsEnabled="False" />
                </Border>

                <Label Content="File Name Prefix:" Grid.Row="5" Grid.Column="0" Padding="0" Margin="0,0,10,10" VerticalAlignment="Center" />
                <Border Grid.Row="5" Grid.Column="1" BorderBrush="{StaticResource UIThemeMainTabControlBorderBrush}" BorderThickness="1" Margin="0,0,0,10">
                    <genericControls:ClickSelectTextBox x:Name="_tbFileNamePrefix" BorderThickness="0" Padding="3,2" />
                </Border>

                <Label Content="Number of Variations:" Grid.Row="6" Grid.Column="0" Padding="0" Margin="0,0,10,0" VerticalAlignment="Center" />
                <Border Grid.Row="6" Grid.Column="1" BorderBrush="{StaticResource UIThemeMainTabControlBorderBrush}" BorderThickness="1">
                    <genericControls:ClickSelectTextBox x:Name="_tbNumberOfVariations" TextAlignment="Right" BorderThickness="0" Padding="3,2" />
                </Border>
            </Grid>
            </GroupBox>

            <!-- Preview -->
            <GroupBox Grid.Column="2" Header="Preview">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Label Content="Action:" Grid.Row="0" Grid.Column="0" Padding="0" Margin="0,0,10,5" VerticalAlignment="Center" />
                <ComboBox Name="_cbPreviewAction" Grid.Row="0" Grid.Column="1" Margin="0,0,0,5" SelectionChanged="_cbPreviewAction_SelectionChanged" />

                <Label Content="Frame:" Grid.Row="1" Grid.Column="0" Padding="0" Margin="0,0,10,5" VerticalAlignment="Center" />
                <ComboBox Name="_cbPreviewFrame" Grid.Row="1" Grid.Column="1" Margin="0,0,0,5" SelectionChanged="_cbPreviewFrame_SelectionChanged" />

                <Button Name="_btnApplyPreview" Content="Apply" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Click="_btnApplyPreview_Click" Margin="0,5,0,5" Padding="10,5" HorizontalAlignment="Stretch" />

                <Image Name="_imgPreview" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Width="200" Height="200" Stretch="Uniform" HorizontalAlignment="Left" Margin="0,5,0,0" />
            </Grid>
            </GroupBox>
        </Grid>

        <!-- Buttons -->
        <Grid Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <TextBlock Name="_tbStatus" Grid.Column="0" VerticalAlignment="Center" Foreground="{StaticResource TextForeground}" />
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Name="_btnGenerate" Content="Generate" Click="_btnGenerate_Click" MinWidth="100" Height="30" Margin="0,0,10,0" Padding="10,5" />
                <Button Name="_btnCancel" Content="Close" Click="_btnCancel_Click" MinWidth="100" Height="30" Padding="10,5" />
            </StackPanel>
        </Grid>
    </Grid>
</Styles:TkWindow>
