<Styles:TkWindow x:Class="ActEditor.Tools.PaletteGenerator.PaletteGeneratorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" SnapsToDevicePixels="True"
              xmlns:Styles="clr-namespace:TokeiLibrary.WPF.Styles;assembly=TokeiLibrary"
                 xmlns:TokeiLibrary="clr-namespace:TokeiLibrary;assembly=TokeiLibrary"
                 mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:genericControls="clr-namespace:ActEditor.Core.WPF.GenericControls"
                 xmlns:PaletteGen="clr-namespace:ActEditor.Tools.PaletteGenerator"
                 Background="{StaticResource TabItemBackground}" Foreground="{StaticResource TextForeground}"
                 Height="700" Width="1100" MinWidth="1000" MinHeight="600" Title="Gerador de Paleta">
    <Grid Focusable="True" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="300" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="*" MinWidth="300" />
        </Grid.ColumnDefinitions>
        
        <!-- ACT Info -->
        <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label Content="ACT de Origem:" Padding="0" Margin="0,0,10,0" VerticalAlignment="Center" />
            <TextBlock Name="_tbActInfo" Grid.Column="1" VerticalAlignment="Center" Foreground="{StaticResource TextForeground}" FontStyle="Italic" />
        </Grid>

        <!-- Color Groups Management -->
        <Grid Grid.Row="1" Grid.Column="0" Margin="0,0,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            
            <Label Content="Grupos de Cores:" Padding="0" Margin="0,0,0,5" />
            
            <!-- Group Management Buttons -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,5">
                <Button Name="_btnAddGroup" Content="Adicionar Grupo" Click="_btnAddGroup_Click" Padding="5,2" Margin="0,0,5,0" />
                <Button Name="_btnRemoveGroup" Content="Remover" Click="_btnRemoveGroup_Click" Padding="5,2" Margin="0,0,5,0" />
                <Button Name="_btnDuplicateGroup" Content="Duplicar" Click="_btnDuplicateGroup_Click" Padding="5,2" />
            </StackPanel>
            
            <!-- Groups List with 2 columns -->
            <ListBox Name="_lbGroups" Grid.Row="2" SelectionChanged="_lbGroups_SelectionChanged" Margin="0,0,0,5" SelectionMode="Single">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="2" />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="{StaticResource UIThemeMainTabControlBorderBrush}" BorderThickness="1" Margin="2" Padding="5">
                            <StackPanel Orientation="Vertical">
                                <TextBlock FontWeight="Bold">
                                    <TextBlock.Text>
                                        <Binding Path="Name" />
                                    </TextBlock.Text>
                                </TextBlock>
                                <TextBlock FontSize="10" Foreground="Gray">
                                    <TextBlock.Text>
                                        <Binding Path="ModeString" />
                                    </TextBlock.Text>
                                </TextBlock>
                                <TextBlock FontSize="9" Foreground="DarkGray" TextWrapping="Wrap">
                                    <TextBlock.Text>
                                        <Binding Path="IndicesString" />
                                    </TextBlock.Text>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            
            <!-- Selected Group Info -->
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Label Content="Índices do Grupo:" Padding="0" Margin="0,0,10,0" VerticalAlignment="Center" />
                <TextBlock Name="_tbGroupIndices" Grid.Column="1" Padding="0" Foreground="{StaticResource TextForeground}" FontStyle="Italic" TextWrapping="Wrap" VerticalAlignment="Center" />
            </Grid>
        </Grid>
        
        <!-- Group Index Selection and Preview (combined in same module) -->
        <GroupBox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Header="Seleção de Índices e Visualização" Name="_gridGroupSelection" Visibility="Collapsed" Margin="0,0,0,10">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                
                <Label Content="Selecione os Índices para o Grupo Atual (0-255):" Grid.Row="0" Grid.Column="0" Padding="0" Margin="0,0,0,5" />
                <Grid Grid.Row="1" Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0" HorizontalAlignment="Left">
                        <Border BorderBrush="{StaticResource UIThemeMainTabControlBorderBrush}" BorderThickness="1" Background="{StaticResource TabItemBackground}" Padding="5">
                            <PaletteGen:PaletteSelectorGenerator x:Name="_groupPaletteSelector" IsMultipleColorsSelectable="True" Width="256" Height="256" />
                        </Border>
                    </Grid>
                    <StackPanel Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Center">
                        <Button Name="_btnGroupSelectAll" Content="Selecionar Todos" Click="_btnGroupSelectAll_Click" Margin="0,0,0,5" Padding="5,2" />
                        <Button Name="_btnGroupSelectNone" Content="Deselecionar Todos" Click="_btnGroupSelectNone_Click" Padding="5,2" />
                    </StackPanel>
                </Grid>
                <Grid Grid.Row="2" Grid.Column="0" Margin="0,5,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Label Content="Selecionado:" Padding="0" Margin="0,0,10,0" VerticalAlignment="Center" />
                    <TextBlock Name="_tbGroupSelectedIndices" Grid.Column="1" Padding="0" Foreground="{StaticResource TextForeground}" FontStyle="Italic" TextWrapping="Wrap" VerticalAlignment="Center" />
                </Grid>
                
                <!-- Preview section -->
                <Label Content="Visualização:" Grid.Row="0" Grid.Column="2" Padding="0" Margin="0,0,0,5" />
                <Grid Grid.Row="1" Grid.Column="2" Grid.RowSpan="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    
                    <Label Content="Ação:" Grid.Row="0" Grid.Column="0" Padding="0" Margin="0,0,10,5" VerticalAlignment="Center" />
                    <ComboBox Name="_cbPreviewAction" Grid.Row="0" Grid.Column="1" Margin="0,0,0,5" SelectionChanged="_cbPreviewAction_SelectionChanged" />
                    
                    <Label Content="Quadro:" Grid.Row="1" Grid.Column="0" Padding="0" Margin="0,0,10,5" VerticalAlignment="Center" />
                    <Grid Grid.Row="1" Grid.Column="1" Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>
                        <ComboBox Name="_cbPreviewFrame" Grid.Column="0" SelectionChanged="_cbPreviewFrame_SelectionChanged" />
                        <Styles:FancyButton x:Name="_btnPlayPreview" Grid.Column="1" Height="20" Width="20" Margin="5,0,0,0" Click="_btnPlayPreview_Click" />
                    </Grid>
                    
                    <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,5,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Button Name="_btnApplyPreview" Content="Aplicar" Grid.Column="0" Click="_btnApplyPreview_Click" Padding="10,5" HorizontalAlignment="Stretch" />
                        <Button Name="_btnRandomPreview" Content="Aleatório" Grid.Column="2" Click="_btnRandomPreview_Click" Padding="10,5" HorizontalAlignment="Stretch" />
                    </Grid>
                    
                    <Image Name="_imgPreview" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Width="200" Height="200" Stretch="Uniform" HorizontalAlignment="Left" Margin="0,5,0,0" />
                </Grid>
            </Grid>
        </GroupBox>

        <!-- Group Configuration -->
        <Grid Grid.Row="2" Grid.Column="2" Margin="0,0,0,10" Name="_gridGroupConfig">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            
            <!-- Group Name -->
            <Grid Grid.Row="0" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Label Content="Nome do Grupo:" Padding="0" Margin="0,0,10,0" VerticalAlignment="Center" />
                <Border Grid.Column="1" BorderBrush="{StaticResource UIThemeMainTabControlBorderBrush}" BorderThickness="1">
                    <genericControls:ClickSelectTextBox x:Name="_tbGroupName" BorderThickness="0" Padding="3,2" TextChanged="_tbGroupName_TextChanged" />
                </Border>
            </Grid>
            
            <!-- Number of Variations for this Group -->
            <Grid Grid.Row="1" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Label Content="Número de Variações:" Padding="0" Margin="0,0,10,0" VerticalAlignment="Center" />
                <Border Grid.Column="1" BorderBrush="{StaticResource UIThemeMainTabControlBorderBrush}" BorderThickness="1">
                    <genericControls:ClickSelectTextBox x:Name="_tbGroupNumberOfVariations" TextAlignment="Right" BorderThickness="0" Padding="3,2" TextChanged="_tbGroupNumberOfVariations_TextChanged" />
                </Border>
            </Grid>
            
            <!-- Mode Selection -->
            <Grid Grid.Row="2" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Label Content="Modo:" Padding="0" Margin="0,0,10,0" VerticalAlignment="Center" />
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <RadioButton Name="_rbModeHsv" Content="HSV Padrão" IsChecked="True" Margin="0,0,20,0" VerticalAlignment="Center" Checked="_rbMode_Checked" />
                    <RadioButton Name="_rbModeColorize" Content="Colorizar" Margin="0,0,20,0" VerticalAlignment="Center" Checked="_rbMode_Checked" />
                    <RadioButton Name="_rbModeGrayscale" Content="Escala de Cinza" VerticalAlignment="Center" Checked="_rbMode_Checked" />
                </StackPanel>
            </Grid>

            <!-- HSV Standard Mode Controls -->
            <GroupBox Grid.Row="3" Header="Parâmetros do Modo HSV Padrão" Name="_gbHsvMode" Visibility="Visible">
                <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <!-- Hue -->
                <Label Content="Matiz:" Grid.Row="0" Grid.Column="0" Padding="0" Margin="0,0,10,5" VerticalAlignment="Center" />
                <Label Content="Mín:" Grid.Row="0" Grid.Column="1" Padding="0" Margin="0,0,5,5" VerticalAlignment="Center" />
                <Border Grid.Row="0" Grid.Column="2" BorderBrush="{StaticResource UIThemeMainTabControlBorderBrush}" BorderThickness="1" Margin="0,0,5,5">
                    <genericControls:ClickSelectTextBox x:Name="_tbHueMin" TextAlignment="Right" BorderThickness="0" Padding="3,2" />
                </Border>
                <Label Content="Máx:" Grid.Row="0" Grid.Column="3" Padding="0" Margin="0,0,5,5" VerticalAlignment="Center" />
                <Border Grid.Row="0" Grid.Column="4" BorderBrush="{StaticResource UIThemeMainTabControlBorderBrush}" BorderThickness="1" Margin="0,0,0,5">
                    <genericControls:ClickSelectTextBox x:Name="_tbHueMax" TextAlignment="Right" BorderThickness="0" Padding="3,2" />
                </Border>
                <Label Content="Incremento:" Grid.Row="1" Grid.Column="1" Padding="0" Margin="0,0,5,5" VerticalAlignment="Center" />
                <Border Grid.Row="1" Grid.Column="2" BorderBrush="{StaticResource UIThemeMainTabControlBorderBrush}" BorderThickness="1" Margin="0,0,5,5">
                    <genericControls:ClickSelectTextBox x:Name="_tbHueStep" TextAlignment="Right" BorderThickness="0" Padding="3,2" />
                </Border>
                <Label Content="Intervalo:" Grid.Row="1" Grid.Column="3" Padding="0" Margin="0,0,5,5" VerticalAlignment="Center" />
                <Border Grid.Row="1" Grid.Column="4" BorderBrush="{StaticResource UIThemeMainTabControlBorderBrush}" BorderThickness="1" Margin="0,0,0,5">
                    <genericControls:ClickSelectTextBox x:Name="_tbHueRange" TextAlignment="Right" BorderThickness="0" Padding="3,2" />
                </Border>

                <!-- Saturation -->
                <Label Content="Saturação:" Grid.Row="2" Grid.Column="0" Padding="0" Margin="0,0,10,0" VerticalAlignment="Center" />
                <Label Content="Mín:" Grid.Row="2" Grid.Column="1" Padding="0" Margin="0,0,5,0" VerticalAlignment="Center" />
                <Border Grid.Row="2" Grid.Column="2" BorderBrush="{StaticResource UIThemeMainTabControlBorderBrush}" BorderThickness="1" Margin="0,0,5,0">
                    <genericControls:ClickSelectTextBox x:Name="_tbSaturationMin" TextAlignment="Right" BorderThickness="0" Padding="3,2" />
                </Border>
                <Label Content="Máx:" Grid.Row="2" Grid.Column="3" Padding="0" Margin="0,5,5,0" VerticalAlignment="Center" />
                <Border Grid.Row="2" Grid.Column="4" BorderBrush="{StaticResource UIThemeMainTabControlBorderBrush}" BorderThickness="1" Margin="0,0,0,0">
                    <genericControls:ClickSelectTextBox x:Name="_tbSaturationMax" TextAlignment="Right" BorderThickness="0" Padding="3,2" />
                </Border>
                <Label Content="Incremento:" Grid.Row="3" Grid.Column="1" Padding="0" Margin="0,0,5,0" VerticalAlignment="Center" />
                <Border Grid.Row="3" Grid.Column="2" BorderBrush="{StaticResource UIThemeMainTabControlBorderBrush}" BorderThickness="1" Margin="0,0,5,0">
                    <genericControls:ClickSelectTextBox x:Name="_tbSaturationStep" TextAlignment="Right" BorderThickness="0" Padding="3,2" />
                </Border>

                <!-- Lightness -->
                <Label Content="Luminosidade:" Grid.Row="4" Grid.Column="0" Padding="0" Margin="0,5,10,0" VerticalAlignment="Center" />
                <Label Content="Mín:" Grid.Row="4" Grid.Column="1" Padding="0" Margin="0,5,5,0" VerticalAlignment="Center" />
                <Border Grid.Row="4" Grid.Column="2" BorderBrush="{StaticResource UIThemeMainTabControlBorderBrush}" BorderThickness="1" Margin="0,5,5,0">
                    <genericControls:ClickSelectTextBox x:Name="_tbLightnessMin" TextAlignment="Right" BorderThickness="0" Padding="3,2" />
                </Border>
                <Label Content="Máx:" Grid.Row="4" Grid.Column="3" Padding="0" Margin="0,5,5,0" VerticalAlignment="Center" />
                <Border Grid.Row="4" Grid.Column="4" BorderBrush="{StaticResource UIThemeMainTabControlBorderBrush}" BorderThickness="1" Margin="0,5,0,0">
                    <genericControls:ClickSelectTextBox x:Name="_tbLightnessMax" TextAlignment="Right" BorderThickness="0" Padding="3,2" />
                </Border>
                <Label Content="Incremento:" Grid.Row="5" Grid.Column="1" Padding="0" Margin="0,0,5,0" VerticalAlignment="Center" />
                <Border Grid.Row="5" Grid.Column="2" BorderBrush="{StaticResource UIThemeMainTabControlBorderBrush}" BorderThickness="1" Margin="0,0,5,0">
                    <genericControls:ClickSelectTextBox x:Name="_tbLightnessStep" TextAlignment="Right" BorderThickness="0" Padding="3,2" />
                </Border>
                </Grid>
            </GroupBox>

            <!-- Colorize Mode Controls -->
            <GroupBox Grid.Row="3" Header="Parâmetros do Modo Colorizar" Name="_gbColorizeMode" Visibility="Collapsed">
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <!-- Hue Range for Variations -->
                    <Label Content="Intervalo de Matiz (para Variações):" Grid.Row="0" Grid.Column="0" Padding="0" Margin="0,0,10,5" VerticalAlignment="Center" />
                    <Label Content="Mín:" Grid.Row="0" Grid.Column="1" Padding="0" Margin="0,0,5,5" VerticalAlignment="Center" />
                    <Border Grid.Row="0" Grid.Column="2" BorderBrush="{StaticResource UIThemeMainTabControlBorderBrush}" BorderThickness="1" Margin="0,0,5,5">
                        <genericControls:ClickSelectTextBox x:Name="_tbColorizeHueMin" TextAlignment="Right" BorderThickness="0" Padding="3,2" />
                    </Border>
                    <Label Content="Máx:" Grid.Row="0" Grid.Column="3" Padding="0" Margin="0,0,5,5" VerticalAlignment="Center" />
                    <Border Grid.Row="0" Grid.Column="4" BorderBrush="{StaticResource UIThemeMainTabControlBorderBrush}" BorderThickness="1" Margin="0,0,0,5">
                        <genericControls:ClickSelectTextBox x:Name="_tbColorizeHueMax" TextAlignment="Right" BorderThickness="0" Padding="3,2" />
                    </Border>
                    <Label Content="Intervalo:" Grid.Row="1" Grid.Column="1" Padding="0" Margin="0,0,5,5" VerticalAlignment="Center" />
                    <Border Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="3" BorderBrush="{StaticResource UIThemeMainTabControlBorderBrush}" BorderThickness="1" Margin="0,0,0,5">
                        <genericControls:ClickSelectTextBox x:Name="_tbColorizeHueRange" TextAlignment="Right" BorderThickness="0" Padding="3,2" />
                    </Border>

                    <!-- Colorize Hue Offsets -->
                    <Label Content="Deslocamento de Matiz (Tons Claros):" Grid.Row="2" Grid.Column="0" Padding="0" Margin="0,5,10,5" VerticalAlignment="Center" />
                    <Border Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="4" BorderBrush="{StaticResource UIThemeMainTabControlBorderBrush}" BorderThickness="1" Margin="0,5,0,5">
                        <genericControls:ClickSelectTextBox x:Name="_tbColorizeHueLight" TextAlignment="Right" BorderThickness="0" Padding="3,2" />
                    </Border>

                    <Label Content="Deslocamento de Matiz (Tons Médios):" Grid.Row="3" Grid.Column="0" Padding="0" Margin="0,0,10,5" VerticalAlignment="Center" />
                    <Border Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="4" BorderBrush="{StaticResource UIThemeMainTabControlBorderBrush}" BorderThickness="1" Margin="0,0,0,5">
                        <genericControls:ClickSelectTextBox x:Name="_tbColorizeHueMedium" TextAlignment="Right" BorderThickness="0" Padding="3,2" />
                    </Border>

                    <Label Content="Deslocamento de Matiz (Tons Escuros):" Grid.Row="4" Grid.Column="0" Padding="0" Margin="0,0,10,5" VerticalAlignment="Center" />
                    <Border Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="4" BorderBrush="{StaticResource UIThemeMainTabControlBorderBrush}" BorderThickness="1" Margin="0,0,0,5">
                        <genericControls:ClickSelectTextBox x:Name="_tbColorizeHueDark" TextAlignment="Right" BorderThickness="0" Padding="3,2" />
                    </Border>

                    <Label Content="Deslocamento Global de Saturação:" Grid.Row="5" Grid.Column="0" Padding="0" Margin="0,0,10,5" VerticalAlignment="Center" />
                    <Border Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="4" BorderBrush="{StaticResource UIThemeMainTabControlBorderBrush}" BorderThickness="1" Margin="0,0,0,5">
                        <genericControls:ClickSelectTextBox x:Name="_tbColorizeSaturation" TextAlignment="Right" BorderThickness="0" Padding="3,2" />
                    </Border>

                    <Label Content="Deslocamento Global de Brilho:" Grid.Row="6" Grid.Column="0" Padding="0" Margin="0,0,10,0" VerticalAlignment="Center" />
                    <Border Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="4" BorderBrush="{StaticResource UIThemeMainTabControlBorderBrush}" BorderThickness="1">
                        <genericControls:ClickSelectTextBox x:Name="_tbColorizeBrightness" TextAlignment="Right" BorderThickness="0" Padding="3,2" />
                    </Border>
                </Grid>
            </GroupBox>

            <!-- Grayscale Mode Controls -->
            <GroupBox Grid.Row="3" Header="Parâmetros do Modo Escala de Cinza" Name="_gbGrayscaleMode" Visibility="Collapsed">
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <!-- Grayscale Type -->
                    <Label Content="Tipo de Escala de Cinza:" Grid.Row="0" Grid.Column="0" Padding="0" Margin="0,0,10,10" VerticalAlignment="Center" />
                    <StackPanel Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="4" Orientation="Horizontal" Margin="0,0,0,10">
                        <RadioButton Name="_rbGrayscaleTypeBlackWhite" Content="Preto/Branco" IsChecked="True" Margin="0,0,20,0" VerticalAlignment="Center" />
                        <RadioButton Name="_rbGrayscaleTypeGray" Content="Cinza" Margin="0,0,20,0" VerticalAlignment="Center" />
                        <RadioButton Name="_rbGrayscaleTypeBoth" Content="Ambos" VerticalAlignment="Center" />
                    </StackPanel>

                    <!-- Light Tone -->
                    <Label Content="Light Tone:" Grid.Row="1" Grid.Column="0" Padding="0" Margin="0,0,10,5" VerticalAlignment="Center" />
                    <Border Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="4" BorderBrush="{StaticResource UIThemeMainTabControlBorderBrush}" BorderThickness="1" Margin="0,0,0,5">
                        <genericControls:ClickSelectTextBox x:Name="_tbGrayscaleLightTone" TextAlignment="Right" BorderThickness="0" Padding="3,2" />
                    </Border>

                    <!-- Medium Tone -->
                    <Label Content="Tom Médio:" Grid.Row="2" Grid.Column="0" Padding="0" Margin="0,0,10,5" VerticalAlignment="Center" />
                    <Border Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="4" BorderBrush="{StaticResource UIThemeMainTabControlBorderBrush}" BorderThickness="1" Margin="0,0,0,5">
                        <genericControls:ClickSelectTextBox x:Name="_tbGrayscaleMediumTone" TextAlignment="Right" BorderThickness="0" Padding="3,2" />
                    </Border>

                    <!-- Dark Tone -->
                    <Label Content="Dark Tone:" Grid.Row="3" Grid.Column="0" Padding="0" Margin="0,0,10,5" VerticalAlignment="Center" />
                    <Border Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="4" BorderBrush="{StaticResource UIThemeMainTabControlBorderBrush}" BorderThickness="1" Margin="0,0,0,5">
                        <genericControls:ClickSelectTextBox x:Name="_tbGrayscaleDarkTone" TextAlignment="Right" BorderThickness="0" Padding="3,2" />
                    </Border>

                    <!-- Contrast -->
                    <Label Content="Contraste:" Grid.Row="4" Grid.Column="0" Padding="0" Margin="0,0,10,5" VerticalAlignment="Center" />
                    <Border Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="4" BorderBrush="{StaticResource UIThemeMainTabControlBorderBrush}" BorderThickness="1" Margin="0,0,0,5">
                        <genericControls:ClickSelectTextBox x:Name="_tbGrayscaleContrast" TextAlignment="Right" BorderThickness="0" Padding="3,2" />
                    </Border>

                    <!-- Brightness -->
                    <Label Content="Brilho:" Grid.Row="5" Grid.Column="0" Padding="0" Margin="0,0,10,0" VerticalAlignment="Center" />
                    <Border Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="4" BorderBrush="{StaticResource UIThemeMainTabControlBorderBrush}" BorderThickness="1">
                        <genericControls:ClickSelectTextBox x:Name="_tbGrayscaleBrightness" TextAlignment="Right" BorderThickness="0" Padding="3,2" />
                    </Border>
                </Grid>
            </GroupBox>
        </Grid>

        <!-- Output Settings -->
        <GroupBox Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Header="Output Settings" Margin="0,0,0,10">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
